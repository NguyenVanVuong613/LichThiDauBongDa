<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">


        <ImageView
            android:id="@+id/img_team_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_margin="32dp"
            android:layout_marginStart="34dp"
            android:contentDescription="@string/LeagueLogo"
            android:src="@drawable/ball"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="174dp"
            android:layout_height="26dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@id/img_team_1"
            android:gravity="center"
            android:text="@string/Time"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/img_team_1"
            app:layout_constraintStart_toEndOf="@+id/img_team_1"
            app:layout_constraintTop_toTopOf="@+id/img_team_1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="156dp"
            android:layout_height="0dp"
            android:layout_below="@id/tv_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/img_team_1"
            android:gravity="center"
            android:text="@string/Date"
            android:textColor="#262E63"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_time"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="@+id/tv_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <TextView
            android:id="@+id/tv_team1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_team_1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/HomeTeam"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_team_1"
            app:layout_constraintStart_toStartOf="@+id/img_team_1"
            app:layout_constraintTop_toBottomOf="@+id/img_team_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>